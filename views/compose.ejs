<% layout('layout/main') -%>
<% block('title', Добавить статью') -%>


<div class="container compose__container">
  <h1 class="blog-heading ">Новая статья</h1>
  <form class="" action="/compose" method="post">
    <div class="form-group">
      <label>Заголовок</label>
      <input class="form-control" type="text" name="postTitle">
    </div>
    <div class="form-group">
      <label>Текст статьи</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Опубликовать</button>
  </form>
</div>


