<% layout('layout/main') -%>
<% block('title', 'Главная') -%>

<div class="container mt-4 text-center home__container">
  <h1 class="blog-heading">Добро пожаловать в блог</h1>
  <h4 class="blog-sub-heading text-muted">это блог об информационных технологиях</h4>
  <a class="btn btn-primary btn-lg mt-4 mx-auto home__write-btn" href="/compose">Добавить статью</a>
</div>

<div class="container home__container-post">
  <h1 class="text-center">Новые статьи</h1>
  <div class="row mr-5">
           
<%  posts.forEach(function(post){ %>
      <!-- <h1><%=post.title%></h1>
      <p><%=post.content%></p> -->

      <div class="card col-3 offset-1 mt-5 ">
        <div class="card-body home__card">
          <h5 class="card-title"><%=post.title%></h5>
          <p class="card-text"><%=post.content%></p>
          <a href="/posts/<%=post._id%>" class="btn btn-primary home__post-btn">Читать</a>
        </div>
      </div>
      <% }) %>


  </div>
</div>
